# ================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ================================================
# Copy this file to .env on your production server
# Fill in all values with production credentials
# NEVER commit the actual .env file to Git

# Django Core Settings
DEBUG=False
SECRET_KEY=GENERATE_A_NEW_SECRET_KEY_HERE_50_CHARACTERS_LONG
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,YOUR_SERVER_IP

# Database Configuration
DB_NAME=crm_production
DB_USER=crm_user
DB_PASSWORD=STRONG_DATABASE_PASSWORD_HERE
DB_HOST=localhost
DB_PORT=5432

# Tenant Databases
DB_TENANT_PUKUL_NAME=crm_db_pukul_com
DB_TENANT_TEST_NAME=crm_db_test_com

# Site Configuration
SITE_URL=https://yourdomain.com
TIME_ZONE=UTC

# WhatsApp Evolution API
EVOLUTION_API_URL=http://localhost:8081
EVOLUTION_API_KEY=YOUR_EVOLUTION_API_KEY_HERE

# Celery / Redis
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email Settings (Gmail example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your-gmail-app-password